@model bioResearchSystem.Web.Models.Accounts.LoginViewModel
 @{ 
      Layout = "~/Views/Shared/_LoginLayout.cshtml";
 }
    <div class="login-page">
        <div class="form">
            <form class="login-form" asp-action="Accounts" asp-controller="Login">
                <input type="text" placeholder="username" />
                <input type="password" placeholder="password" />
                <button>login</button>
                <p class="message">Not registered? <a href="@Url.Action("Registration","Accounts")">Create an account</a></p>
            </form>
        </div>
    </div>