@model bioResearchSystem.Web.Models.Accounts.LoginViewModel
 @{ 
      Layout = "~/Views/Shared/_LoginLayout.cshtml";
 }
    <div class="login-page" style="padding:70% 0 0">
        <div class="form">
            <form class="login-form" asp-action="Login" asp-controller="Accounts">
                <span asp-validation-for="ErrorMsg" class="text-danger"></span>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <input type="text" asp-for="Email" placeholder="email" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="password" asp-for="Password" placeholder="password" />
                </div>
                <input type="submit" class="ghost" hidden />
                <button onlclick="push()">login</button>
                <p class="message">Not registered? <a href="@Url.Action("Registration","Accounts")">Create an account</a></p>
            </form>
        </div>
    </div>
@section Scripts{ 
    <script type="text/javascript" src="~/js/common.js"></script>
}