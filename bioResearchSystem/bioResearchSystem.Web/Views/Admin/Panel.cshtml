@model List<bioResearchSystem.Models.Entities.Topic>
@using bioResearchSystem.ВLL.Third_part.pic
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div id="modDialog" class="modal fade">
        <div id="dialogContent" class="modal-dialog"></div>
    </div>
    <div class="row">
        <div class="col-sm-9">
            <div class="row">
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4  multi-content" style="width: 18rem;">
                            <div class="card mb-4 box-shadow card-block">
                                <img class="card-img-top display-only" src="@ImageConvertor.ConvertBytesToImage(item.TopicPicture)" alt="Card image cap">
                               
                                    <a href="Admin/EditTopic/@item.Id.ToString()" class="btn-dat panel-btn-edit" > Edit </a>
                                  
                                <div class="card-body">
                                    <p class="card-text topic-text" align="center">@item.TopicName</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row mx-auto empty">
                        There are no upcoming events yet
                        <i class="far fa-sad-cry"></i>
                    </div>
                }
            </div>

        </div>
        <div class="col-sm-3">
            <div class="card mb-4" style="width: 18rem; height:10rem">
                <div class="card-header">
                    Topic settings
                </div>
                <div align="center">
                    <form asp-action="CreateNewTopic" asp-controller="Admin" class="mt-3">
                        <input class="btn btn-sm btn-block panel-btn" value="+ Create new topic" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/dynamic.js"></script>
    <script src="~/js/modals/modal.js"></script>
}