@model bioResearchSystem.Web.Models.Topics.TopicViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>EditTopic</h1>

<h4>TopicViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTopic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TopicName" class="control-label"></label>
                <input asp-for="TopicName" class="form-control" />
                <span asp-validation-for="TopicName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


